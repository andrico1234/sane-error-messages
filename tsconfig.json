{
  // see https://www.typescriptlang.org/tsconfig to better understand tsconfigs
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/template/**/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": false,
    "module": "commonjs",
    "rootDir": "src",
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "target": "es2017"
  }
}